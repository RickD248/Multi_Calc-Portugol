         escreval (" ")
         leia (opcao2)

         limpatela

         se opcao2 = 1 entao

            escreval ("      __             ____   __ ")
            escreval ("    _/ /            / __ \_/ / ")
            escreval ("   / __/  ______   / /_/ / __/ ")
            escreval ("  (_  )  /_____/  / _, _(_  )  ")
            escreval (" /  _/           /_/ |_/  _/   ")
            escreval (" /_/                   /_/     ")
            escreval (" ")

            escreval ("digite o valor atual do dolar")
            leia (dv)
            escreval ("de dolar para real, qual a quantidade q qr converter?")
            leia (d)
            re <- d * dv
            escreval ("Resultado: R$", re)
         senao

            se opcao2 = 2 entao

               escreval ("    ____   __              __  ")
               escreval ("   / __ \_/ /            _/ /  ")
               escreval ("  / /_/ / __/  ______   / __/  ")
