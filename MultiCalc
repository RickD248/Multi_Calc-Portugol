            escreval ("        \/          \/                      \/      \/       \/      \/ ")
            escreval ("                               TABUADA                                  ")

            escreval ("quanto é", numeroai, " X ", tabuadakk, " ? ")
            leia (respondiai)

            se respondiai = numeroai * tabuadakk entao
               escreval ("Parabéns! Está correto!")
               escreval (numeroai, " X ", tabuadakk, " = ", numeroai * tabuadakk)
