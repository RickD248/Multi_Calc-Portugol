               escreval ("/_/ |_/  _/           /  _/    ")
               escreval ("      /_/             /_/      ")
               escreval (" ")

               escreval ("digite o valor atual do dolar")
               leia (dv)
               escreval ("de real para dolar, qual a quantidade q qr converter?")
