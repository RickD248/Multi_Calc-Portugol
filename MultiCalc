   se opcao1 = 8 entao
      escreval ("   _____   .__         .__            ________                          ")
      escreval ("  /     \  |__|  ____  |__|          /  _____/ _____     _____    ____  ")
      escreval (" /  \ /  \ |  | /    \ |  |  ______ /   \  ___ \__  \   /     \ _/ __ \ ")
      escreval ("/    Y    \|  ||   |  \|  | /_____/ \    \_\  \ / __ \_|  Y Y  \\  ___/ ")
      escreval ("\____|__  /|__||___|  /|__|          \______  /(____  /|__|_|  / \___  >")
      escreval ("        \/          \/                      \/      \/       \/      \/ ")
      escreval (" ")

      escreval ("digite um numero para ser a base da tabuada no mini-game")
      leia (numeroai)
      escreval (" ")
      limpatela

      para tabuadakk de 1 ate 10 faca
         repita

            limpatela
            escreval ("   _____   .__         .__            ________                          ")
            escreval ("  /     \  |__|  ____  |__|          /  _____/ _____     _____    ____  ")
            escreval (" /  \ /  \ |  | /    \ |  |  ______ /   \  ___ \__  \   /     \ _/ __ \ ")
